{
  "name": "@mrwzrd/spellbook",
  "version": "0.1.0",
  "description": "Project planning CLI that integrates with Claude Code for AI-assisted development",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "spellbook": "./bin/spellbook.js"
  },
  "scripts": {
    "build": "npm run build:css && tsc && npm run copy-public",
    "build:css": "npx tailwindcss -c src/web/tailwind.config.js -i src/web/public/tailwind-input.css -o src/web/public/vendor/tailwind.css --minify",
    "copy-public": "cp -r src/web/public dist/web/",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "project-planning",
    "cli",
    "claude-code",
    "ai-assisted",
    "development",
    "task-management"
  ],
  "author": "mrwzrd",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.0.0",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.3",
    "express": "^4.21.0",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "multer": "^1.4.5-lts.1",
    "open": "^10.1.0",
    "ora": "^8.1.1",
    "ws": "^8.19.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.18.0",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "optionalDependencies": {
    "node-pty": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mitchmalinin/spellbook.git"
  }
}
